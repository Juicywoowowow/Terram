@-- Single Post Template

@include "_header.lwt"

    <main>
        <article class="post-single">
            <div class="container container-narrow">
                <header class="post-header">
                    <a href="/blog" class="back-link">â† Back to Blog</a>
                    <span class="post-category-large @{post.category}">@{post.category | upper}</span>
                    <h1>@{post.title}</h1>
                    <div class="post-meta-large">
                        <span>ğŸ“… @{post.date}</span>
                        <span>ğŸ‘ @{post.views} views</span>
                        @if post.featured
                            <span class="featured-label">â­ Featured Post</span>
                        @end
                    </div>
                </header>

                <div class="post-content">
                    <p class="lead">@{post.excerpt}</p>
                    <div class="content-body">
                        @-- In a real app, this would be markdown-rendered content
                        @{post.content}
                    </div>
                </div>

                <footer class="post-footer">
                    <div class="post-tags-large">
                        <strong>Tags:</strong>
                        @for tag in post.tags
                            <a href="/blog?tag=@{tag}" class="tag-link">@{tag}</a>@if !_loop.last,@end
                        @end
                    </div>

                    <div class="post-views-msg">
                        @if post.views >= 2000
                            <p class="views-high">ğŸ”¥ This is one of our most popular posts!</p>
                        @else
                            @if post.views >= 500
                                <p class="views-medium">ğŸ“ˆ This post is gaining traction!</p>
                            @else
                                <p class="views-low">ğŸŒ± A fresh read for you!</p>
                            @end
                        @end
                    </div>
                </footer>
            </div>
        </article>
    </main>

@include "_footer.lwt"
