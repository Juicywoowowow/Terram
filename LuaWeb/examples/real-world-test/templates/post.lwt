<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post by @{post.author} - LuaWeb Feed</title>
    <link rel="stylesheet" href="/static/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1><a href="/">LuaWeb Feed</a></h1>
            <div class="user-controls">
                @if user
                    <span>Hi, <strong>@{user.username}</strong></span>
                    <a href="/logout">Logout</a>
                @else
                    <a href="/login">Login</a>
                    <a href="/register">Register</a>
                @end
            </div>
        </header>

        <a href="/" style="display: inline-block; margin-bottom: 20px; color: #666; text-decoration: none;">‚Üê Back to Feed</a>

        <!-- Original Post -->
        <div class="card">
            <div class="post-header">
                <span class="post-author">@{post.author}</span>
                <span class="post-date">@{post.created_at}</span>
            </div>
            <div class="post-content" style="font-size: 1.1em;">@{post.content}</div>
            
            @if user and (user.username == post.author)
            <div style="text-align: right;">
                <form action="/posts/delete" method="POST" style="display: inline;">
                    <input type="hidden" name="id" value="@{post.id}">
                    <button type="submit" class="btn btn-delete">Delete Post</button>
                </form>
            </div>
            @end
        </div>
        
        <!-- Replies -->
        <h3>Replies</h3>
        
        @if user
        <div class="card reply-form">
            <form action="/post/@{post.id}/reply" method="POST">
                <textarea name="content" placeholder="Write a reply..." required style="min-height: 60px;"></textarea>
                <div style="text-align: right;">
                    <button type="submit" class="btn">Reply</button>
                </div>
            </form>
        </div>
        @else
        <div class="card" style="text-align: center;">
            <a href="/login">Log in</a> to reply.
        </div>
        @end
        
        @if replies
        <div class="replies-list">
            @for reply in replies
            <div class="card reply" style="padding: 15px;">
                <div class="reply-header">
                    <strong>@{reply.author_name}</strong> &middot; <span style="color:#888">@{reply.created_at}</span>
                </div>
                <div class="reply-content">@{reply.content}</div>
            </div>
            @end
        </div>
        @else
        <p style="text-align: center; color: #888;">No replies yet.</p>
        @end

    </div>
</body>
</html>
